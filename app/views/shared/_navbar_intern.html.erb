<div style="display: flex; flex-direction: row; justify-content: space-between; color:white; background: #551012">
  <div style="display:flex; justify-content:center; align-items:center;width: 20vw;">
    <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo_gargaleria_laranja", class: 'logo' %>
  <% end %>
  </div>
  <div style="width: 20vw;">
    <ul style="display: flex; flex-direction: row; justify-content: space-around; align-items: center; margin-top: 25px;">
      <% if user_signed_in? %>
        <li class="nav-item dropdown" style="display: inline;">
          <% if current_user.photo.url %>
            <%= cl_image_tag current_user.photo, height: 40, width: 40, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <!-- <i class="fas fa-user-circle avatar dropdown-toggle"></i> -->
            <%= image_tag "favicon_gargaleria.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% unless current_user.seller %>
              <%= link_to "Histories", dashboard_beverages_path, class: "dropdown-item" %>
            <% end %>
            <% if current_user.seller %>
              <%= link_to "Dashboard", dashboard_beverages_path, id:"link_dashboard", class: "dropdown-item" %>
            <% else %>
              <%= link_to "Become a Seller", become_seller_path, id:"link_seller", class: "dropdown-item" %>
            <% end %>
            <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item" style="display: inline;">
          <%= link_to "Login", new_user_session_path, id:"link_login" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
