<div class="show-general">  <!-- ## Div geral da show -->
  <div class="show-nav">
    <%= render 'shared/navbar_intern'  %>
  </div> <!--Fechamento do navbar intern-->

  <div class="container" style="margin-top:10vh; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
    <div class="row p-2">
      <div class="col-lg-6 col-sm-12 col-md-12">
        <%= cl_image_tag(@beverage.photo, class:"image-show", crop: :fill) %>
      </div>
      <div class="col-lg-6 col-sm-12 col-md-12">
        <div class="title-description" style="padding-bottom: 10px">
          <h3> <%= @beverage.name %> </h3>
        </div>
        <div style="padding-bottom: 10px; overflow:auto; height: 150px;">
          <%= @beverage.description %>
        </div>
        <div class="price d-flex align-items-center">
          <p style="color:orange; font-size:40px;"> <b> R$<%= @beverage.price.to_i %></b>
        </div>
        <div class="quantity">
          <p style="font-size:20px;"><b> Stock: </b><%= @beverage.stock %> </p>
        </div>
        <div>
          <% unless @beverage.user == current_user %>
            <%= link_to "Buy", beverages_buy_path(@beverage),class:"btn btn-warning" %>
          <% end %>
        </div>
      </div>
      <div>

      </div>
    </div>
  </div>
